@{
    ViewData["Title"] = "Home Page";
    Layout = "_Customer";
}
<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="content">
                    <h1 class="page-name">Dashboard</h1>
                    <ol class="breadcrumb">
                        <li><a href="index.html">Home</a></li>
                        <li class="active">my account</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="user-dashboard page-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ul class="list-inline dashboard-menu text-center">
                    <li><a asp-controller="Customer" asp-action="ProfileOrders">Orders</a></li>
                    <li><a asp-controller="Customer" asp-action="ProfileAddress">Address</a></li>
                    <li><a asp-controller="Customer" asp-action="ProfileDetails">Profile Details</a></li>
                    <li><a asp-controller="Customer" asp-action="EditProfile">Edit Profile</a></li>
                    <li><a asp-controller="Customer" class="active" asp-action="EditProfile">Change Password</a></li>
                </ul>
                <div class="dashboard-wrapper dashboard-user-profile">
                    <div class="media">
                        <div class="media-body">

                            <form class="text-left clearfix" method="post" asp-action="EditPassword"
                                asp-controller="Customer">


                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="currentpassword">Current Password</label>
                                        <input type="password" class="form-control" id="currentpassword"
                                            name="CurrentPassword">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="lastname">New Password</label>
                                        <input type="password" class="form-control" id="lastname"
                                            name="NewPassword">
                                        
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="email">Re-Enter New Passoword</label>
                                        <input type="password" class="form-control" id="email"
                                            name="NewPassword2">
                                    </div>
                                </div>


                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn btn-success">Done</button>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>