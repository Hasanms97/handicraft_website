@model IEnumerable<Handicraft_Website.Models.Cart>
@{
	ViewData["Title"] = "Home Page";
	Layout = "_Customer";
}

<div class="page-wrapper">
	<section class="page-header">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="content">
						<h1 class="page-name">Dashboard</h1>
						<ol class="breadcrumb">
							<li><a href="index.html">Home</a></li>
							<li class="active">my account</li>
						</ol>
					</div>
				</div>
			</div>
		</div>
	</section>
	<section class="user-dashboard page-wrapper">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<ul class="list-inline dashboard-menu text-center">
						<li><a class="active" asp-controller="Customer" asp-action="ProfileOrders">Orders</a></li>
						<li><a asp-controller="Customer" asp-action="ProfileAddress">Address</a></li>
						<li><a asp-controller="Customer" asp-action="ProfileDetails">Profile Details</a></li>
						<li><a asp-controller="Customer" asp-action="EditProfile">Edit Profile</a></li>
						<li><a asp-controller="Customer" asp-action="EditPassword">Change Password</a></li>
					</ul>
					<div class="dashboard-wrapper user-dashboard">
						<div class="table-responsive">
							<table class="table">
								<thead>
									<tr>
										<th>Order ID</th>
										<th>Date</th>
										<th>Items</th>
										<th>Total Price</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										<tr>
											<td>#@item.Id</td>
											<td>@item.DateOfPruchase</td>
											<td>@item.CartProducts.Count</td>
											<td>@item.CartProducts.Sum(x=> x.Product.Price)</td>
											<td><span class="label label-primary">Processing</span></td>
											<td><a  class="btn btn-default" asp-action="ViewOrderDetails" asp-controller="Customer" asp-route-id="@item.Id">View</a></td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>