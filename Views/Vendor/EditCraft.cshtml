@{
  Layout = "_VendorDashboard";
}

@model Handicraft_Website.Models.Product
<main id="main" class="main">

  <div class="pagetitle">
    <h1>Form Elements</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
        <li class="breadcrumb-item">Forms</li>
        <li class="breadcrumb-item active">Elements</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <section class="section">
    <div class="row justify-content-center">
      <div class="col-lg-8">

        <div class="card">
          <div class="card-body">
            <h5 class="card-title">General Form Elements</h5>

            <!-- General Form Elements -->
            <form method="post" asp-action="EditCraft" enctype="multipart/form-data">
              <div class="row mb-3">
                <label for="Name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                  <input type="Name" asp-for="Name" class="form-control">
                </div>
              </div>
              <div class="row mb-3">
                <label for="Price" class="col-sm-2 col-form-label">Price</label>
                <div class="col-sm-10">
                  <input type="Price" asp-for="Price" class="form-control">
                </div>
              </div>
              <div class="row mb-3">
                <label for="Category" class="col-sm-2 col-form-label">Category</label>
                <div class="col-sm-10">

                  <select class="form-select" aria-label="Default select example" asp-for="CategoryId"
                    asp-items="ViewBag.Id"></select>
                </div>
              </div>
              <div class="row mb-3">
                <label for="Description" class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                  <input asp-for="Description" type="text" class="form-control">
                </div>
              </div>
              <div class="row mb-3">
                <label asp-for="ImageFile" class="col-sm-2 col-form-label">Image path</label>
                <div class="col-sm-10">
                  <input asp-for="ImageFile" class="form-control" />
                  <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
              </div>
              <div class="row mb-3">
                <label for="Quantity" class="col-sm-2 col-form-label">Quantity</label>
                <div class="col-sm-10">
                  <input asp-for="Quantity" type="text" class="form-control">
                </div>
              </div>

              <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
              </div>


            </form><!-- End General Form Elements -->

          </div>
        </div>

      </div>


    </div>
  </section>

</main>