@model IEnumerable<Handicraft_Website.Models.CartProduct>
@{
    Layout = "_AdminDashboard";

}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Vendor Registeration</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Vendor Registeration</li>
                <li class="breadcrumb-item active">General</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->


    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">General Form Elements</h5>

                        <!-- General Form Elements -->
                        <form asp-action="Sales">
                            <div class="row mb-3">
                                <label for="inputDate" class="col-sm-2 col-form-label">Date From</label>
                                <div class="col-sm-4">
                                    <input name="startDate" type="date" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputDate" class="col-sm-2 col-form-label">Date To</label>
                                <div class="col-sm-4">
                                    <input name="endDate" type="date" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Search</label>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Submit Form</button>
                                </div>
                            </div>

                        </form>
                        <!-- End General Form Elements -->

                    </div>
                </div>

            </div>


        </div>
    </section>


    <section class="section">
        <div class="row justify-content-center">
            <div class="col-lg">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Results</h5>

                        <!-- Table with hoverable rows -->
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Order ID</th>
                                    <th scope="col">Product Name</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Price per unit</th>
                                    <th scope="col">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int x = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@x</td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.CartId)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Product.Name)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Quantity)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Product.Price)
                                        </td>

                                        <td>
                                            @(item.Quantity * item.Product.Price)
                                        </td>

                                        @{
                                            x++;
                                        }
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <!-- End Table with hoverable rows -->

                    </div>
                </div>


            </div>
        </div>
    </section>

</main>
